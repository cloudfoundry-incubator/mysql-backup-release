---
processes:
- name: streaming-mysql-backup-tool
  executable: /var/vcap/packages/streaming-mysql-backup-tool/bin/streaming-mysql-backup-tool
  args:
    - "--configPath=/var/vcap/jobs/streaming-mysql-backup-tool/config/streaming-mysql-backup-tool.yml"
  limits:
    open_files: <%= p('cf-mysql-backup.ulimit') %>
  ephemeral_disk: true
  additional_volumes:
    - path: /var/vcap/jobs/mysql/config
    - path: /var/vcap/sys/run/mysql
    - path: /var/vcap/sys/run/pxc-mysql
    - path: /var/vcap/store/pxc-mysql
    - path: /var/vcap/store/xtrabackup_tmp
      writable: true
  env:
    PATH: /usr/bin:/bin:<%= p('cf-mysql-backup.xtrabackup_path') %>
